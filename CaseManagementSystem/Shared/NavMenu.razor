            {
                <MudNavLink Match="NavLinkMatch.All" Href="agencytype">
                    Agency Type
                </MudNavLink>
            }
            @if (CustomAuthenticationStateProvider.RoleType() == "Admin")
            {
                <MudNavLink Match="NavLinkMatch.All" Href="casetype">
                    Case Type
                </MudNavLink>
            }

            @if (CustomAuthenticationStateProvider.RoleType() == "Admin")
            {
                <MudNavLink Match="NavLinkMatch.All" Href="caseprofile">
                    Case Profile
                </MudNavLink>
            }
            @if (CustomAuthenticationStateProvider.RoleType() != "Agent")
            {
                <MudNavLink Match="NavLinkMatch.All" Href="subjects">
                    Subjects
                </MudNavLink>
            }
            @if (CustomAuthenticationStateProvider.RoleType() == "Admin")
            {
                <MudNavLink Match="NavLinkMatch.All" Href="timelimit">
                    Time Limit
                </MudNavLink>
            }
            @if (CustomAuthenticationStateProvider.RoleType() == "Admin")
            {
                <MudNavLink Match="NavLinkMatch.All" Href="tracelevel">
                    Trace Level
                </MudNavLink>
            }
            @if (CustomAuthenticationStateProvider.RoleType() == "Admin")
