    {
        <MudNavLink Match="NavLinkMatch.All" Href="companymanagement">
            Company
        </MudNavLink>
    }
    @if (CustomAuthenticationStateProvider.RoleType() != "Agent")
    {
        <MudNavLink Match="NavLinkMatch.All" Href="cases">
            Cases
        </MudNavLink>
    }
